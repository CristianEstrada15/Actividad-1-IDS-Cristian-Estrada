#include <stdio.h>

int main() {
    int numeros[10];

    //Solicitar al usuario que ingrese los numeros
    for(int i = 0; i < 10; i++) {
        printf ("Ingrese el numero %d: ", i+1);
        scanf("%d", &numeros[i]);
    }
    //Determinar si cada numero es par o impar
    for(int i =0; i <10; i++) {
        if(numeros[i] % 2 == 0){
            printf("El numero %d es par \n", numeros[i]);
        } else {
            printf("El numero %d es impar \n", numeros[i]);
        }
    }

    return 0;
}
